<%= turbo_frame_tag "beer_#{beer.id}" do %>
  <div class="col">
    <div class="card h-100">
      <div class="row">
        <div class="col-md-4">
          <img
            src="<%= beer.image_url %>"
            alt="Trendy Pants and Shoes"
            class="img-fluid rounded-start"
            />
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%= beer.name %></h5>
            <p class="card-text">
              <%= beer.description %>
            </p>
            <p class="card-text">
              <small class="text-muted">First brewed <%= beer.first_brewed %></small>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>